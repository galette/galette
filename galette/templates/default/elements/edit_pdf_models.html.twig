        <form action="{{ path_for('pdfModels') }}" method="post" enctype="multipart/form-data" class="form ui">
            <div class="ui basic segment">
{% if model.id != 1 %}
                    <div class="inline field">
                        <label for="title_{{ model.id }}">{{ _T("Title") }}</label>
                        <input type="text" name="model_title" id="title_{{ model.id }}" class="large" value="{{ model.title|escape }}"/>
                    </div>
                    <div class="inline field">
                        <label for="subtitle_{{ model.id }}">{{ _T("Subtitle") }}</label>
                        <input type="text" name="model_subtitle" id="subtitle_{{ model.id }}" class="large" value="{{ model.subtitle|escape }}"/>
                    </div>
{% endif %}
                    <div class="field">
                        <label for="header_{{ model.id }}">{{ _T("Header") }}</label>
                        <textarea name="model_header" id="header_{{ model.id }}">{{ model.header }}</textarea>
                    </div>
                    <div class="field">
                        <label for="footer_{{ model.id }}">{{ _T("Footer") }}</label>
                        <textarea name="model_footer" id="footer_{{ model.id }}">{{ model.footer }}</textarea>
                    </div>
{% if model.id != 1 %}
                    <div class="field">
                        <label for="body_{{ model.id }}">{{ _T("Body") }}</label>
                        <textarea name="model_body" id="body_{{ model.id }}">{{ model.body }}</textarea>
                    </div>
{% endif %}
                    <div class="field">
                        <label for="styles_{{ model.id }}">{{ _T("CSS styles") }}</label>
                        <textarea name="model_styles" id="styles_{{ model.id }}">{{ model.styles }}</textarea>
                    </div>
{% if model.id > 4 %}
                    <div class="field">
                        <label for="type_{{ model.id }}">{{ _T("Type") }}</label>
                        <select name="model_type" id="type_{{ model.id }}" class="ui dropdown nochosen" required>
                            <option value="">{{ _T("Select") }}</option>
                            <option value="{{ constant('Galette\\Entity\\PdfModel::INVOICE_MODEL') }}">{{ _T("Invoice") }}</option>
                            <option value="{{ constant('Galette\\Entity\\PdfModel::RECEIPT_MODEL') }}">{{ _T("Receipt") }}</option>
                            <option value="{{ constant('Galette\\Entity\\PdfModel::ADHESION_FORM_MODEL') }}">{{ _T("Adhesion Form") }}</option>
                        </select>
                    </div>
{% endif %}
            </div>
            <div class="ui basic fitted segment">
                <input type="hidden" name="store" value="true"/>
                <input type="hidden" name="model_id" value="{{ model.id }}"/>
{% if model.id <= 4 %}
                <input type="hidden" name="model_type" value="{{ model.type }}"/>
{% endif %}
                <button type="submit" class="ui labeled icon primary button action">
                    <i class="save icon"></i> {{ _T("Save") }}
                </button>
                <span id="legend-container"></span>
                {% include 'components/forms/csrf.html.twig' %}
            </div>
        </form>
        {% include 'modals/replacements_legend.html.twig' with {'legends': model.getLegend(), 'cur_ref': model.id} %}
