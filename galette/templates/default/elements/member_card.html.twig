<div id="member_card" class="ui horizontal fluid card">
    {% if not (member.picture.path ends with '/default/images/default.png') %}
    <div class="image">
        <img
            id="photo_adh"
            src="{{ url_for("photo", {"id": member.id, "rand": time}) }}"
            width="{{ member.picture.getOptimalWidth() }}"
            height="{{ member.picture.getOptimalHeight() }}"
            alt="{{ _T("Picture") }}"
        >
    </div>
    {% endif %}
    <div class="content">
        <div class="header aligned">
            {{ member.sname }} <a href="{{ url_for("memberVCard", {"id": member.id}) }}"><i class="icon address card outline"></i></a>
            {% if qrcodes.vcard is defined %} <i class="qrcode icon" data-modal="qrcode_vcard"></i>{% endif %}
        </div>
        <div class="meta aligned">
            <span>{{ member.sstatus }}</span>
        </div>
        <div class="description">
            <div class="ui relaxed divided list">
                {% if member.phone or member.gsm %}
                    <div class="item">
                        <div class="content">
                            <span class="header">{{ _T("Phone") }}</span>
                            <div class="description">
                                {% if member.phone %}
                                    {{ member.phone }}{% if qrcodes.phone is defined %} <i class="qrcode icon" data-modal="qrcode_phone"></i>{% endif %}
                                {% endif %}
                                {% if member.gsm %}
                                    {% if member.phone %}, {% endif %}
                                    {{ member.gsm }}{% if qrcodes.gsm is defined %} <i class="qrcode icon" data-modal="qrcode_gsm"></i>{% endif %}
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endif %}
                {% if member.getEmail() %}
                    <div class="item">
                        <div class="content">
                            <span class="blue header">{{ _T("Email") }}</span>
                            <div class="description">
                                {{ member.getEMail() }}{% if qrcodes.email is defined %} <i class="qrcode icon" data-modal="qrcode_email"></i>{% endif %}
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="extra {{ member.getRowClass() }} content">
        <i class="icon receipt" aria-hidden="true"></i>
        {{ member.getDues()|escape }}
    </div>
</div>

{% if qrcodes is not empty %}
    {% for key, qrcode in qrcodes %}
        <div class="ui basic modal" id="qrcode_{{ key }}">
            <img src="{{ qrcode.getImage() }}" alt="{{ qrcode.getLabel() }}" title="{{ qrcode.getLabel() }}" class="medium image tooltip"/>
        </div>
    {% endfor %}
{% endif %}

<script type="text/javascript">
    $('#member_card .qrcode.icon').on('click', function() {
        $('#' + this.dataset.modal).modal({context: 'body'}).modal('show');
    });
</script>
