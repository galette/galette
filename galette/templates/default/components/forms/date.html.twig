{% extends "components/forms/input.html.twig" %}

{% block component %}
    {% set type = "text" %}
    {% set placeholder = _T("yyyy-mm-dd format") %}
    {% if id == 'ddn_adh' and member.id != '' and member.birthdate != '' %}
        {% set example = "<span id=\"member_age\">" ~ member.getAge() ~ "</span>" %}
    {% endif %}
    {{ parent() }}
{% endblock %}

{% block element %}
    <div class="ui calendar" id="birth-rangestart">
        <div class="ui input left icon">
            <i class="calendar icon" aria-hidden="true"></i>
            {{ parent() }}
        </div>
    </div>
{% endblock %}
