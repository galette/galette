{% extends 'public_page.html.twig' %}

{% block content %}
    <form class="ui form">
    {% for type, documents in typed_documents %}
        <div class="galetteform fieldset-{{ loop.index }} ui styled fluid accordion field">
            <div class="active title">
                <i class="jsonly displaynone dropdown icon" aria-hidden="true"></i>
                {{ _T(type) }}
                <span class="ui small text">({{ _Tn("%count document", "%count documents", documents|length)|replace({"%count": documents|length}) }})</span>
            </div>
            <div class="active content field">
                <div class="ui relaxed divided list">
        {% for document in documents %}
                    <div class="item">
                        <i class="large file middle aligned icon"></i>
                        <div class="content">
                            <a class="header" href="{{ url_for('getDocumentFile', {'id': document.getID()}) }}">
                                {{ document.getDocumentFilename() }}
                            </a>
                            <div class="description">{{ document.getCreationDate() }} - {{ document.getPermissionName() }}</div>
                        </div>
                    </div>
        {% endfor %}
                </div>
            </div>
        </div>
    {% endfor %}
    </form>
{% endblock %}