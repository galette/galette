{% if nb_members != 0 %}
        var _bindmassres = function(res) {
            res.find('#btncancel')
                .on('click', function(e) {
                    e.preventDefault();
                    res.modal('hide');
                });
        }

        $('#masschange').off('click').on('click', function(event) {
            event.preventDefault();
            var _this = $(this);

