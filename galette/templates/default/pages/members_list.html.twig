                            class   : 'cancel',
                            click   : function() {
                                $('#sheet_details_form').submit();
                            }
                        }, {
                            text    : '{{ _T("Cancel")|e("js") }}',
                            class   : 'cancel'
                        }]
                    }).modal('show');
