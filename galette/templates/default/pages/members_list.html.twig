            {%  elseif member.isWoman() %}
                            <i class="ui female icon tooltip"><span class="sr-only">{{ _T('Is a woman') }}</span></i>
            {% else %}
                            <i class="ui icon"></i>
            {% endif %}
            {% if member.email != '' %}
