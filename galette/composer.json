{
    "name": "galette/galette",
    "description": "Galette - web membership management towards non profit organizations",
    "license": "GPLv3",
    "type": "project",
    "keywords": [
        "membership",
        "web",
        "management"
    ],
    "homepage": "https://galette.eu/",
    "support": {
        "irc": "irc://irc.oftc.net/galette",
        "issues": "https://bugs.galette.eu/projects/galette",
        "docs": "https://doc.galette.eu"
    },
    "authors": [
        {
            "name": "Johan Cwiklinski",
            "email": "trasher@x-tnd.be",
            "homepage": "https://galette.eu"
        }
    ],
    "autoload": {
        "files": [
            "includes/functions.inc.php"
        ],
        "psr-4": {
            "Galette\\": "lib/Galette"
        }
    },
    "require": {
        "php": ">=8.1",
        "ext-curl": "*",
        "ext-gd": "*",
        "ext-intl": "*",
        "ext-pdo": "*",
        "slim/slim": "^4",
        "monolog/monolog": "^2.1",
        "laminas/laminas-db": "^2.11",
        "laminas/laminas-stdlib": "^3.3",
        "analog/analog": "^1.0",
        "phpmailer/phpmailer": "^6.1",
        "tecnickcom/tcpdf": "^6.6",
        "akrabat/rka-slim-session-middleware": "^3.0",
        "laminas/laminas-i18n": "^2.11",
        "soundasleep/html2text": "^2.0",
        "slim/flash": "^0.4.0",
        "league/event": "^3.0",
        "psr/http-message": "^1.0",
        "psr/container": "^1.0",
        "php-di/slim-bridge": "^3",
        "doctrine/annotations": "^1.8",
        "laminas/laminas-servicemanager": "^3.17",
        "symfony/polyfill-php80": "^1.23",
        "ezyang/htmlpurifier": "^4.13",
        "slim/csrf": "^1.3",
        "twig/twig": "^3.3",
        "slim/twig-view": "^3.3",
        "slim/psr7": "^1.6",
        "symfony/yaml": "^6.2",
        "guzzlehttp/guzzle": "^7.8",
        "twig/string-extra": "^3.8",
        "symfony/console": "^7.1",
        "twig/intl-extra": "^3.21",
        "endroid/qr-code": "^6.0",
        "sabre/vobject": "^4.5"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7",
        "friendsoftwig/twigcs": "^6.2",
        "phpstan/phpstan": "^2.0",
        "phpunit/phpunit": "^10.0",
        "malukenho/docheader": "^1.0",
        "slevomat/coding-standard": "^8.14",
        "alisqi/twigqi": "^3.0",
        "friendsofphp/php-cs-fixer": "^3.75",
        "rector/rector": "^2.0"
    },
    "config": {
        "optimize-autoloader": true,
        "platform-check": false,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "post-install-cmd": [
            "patch -d vendor/tecnickcom/tcpdf/ -p3 < ../patches/tcpdf-php81.patch",
            "patch -d vendor/guzzlehttp/guzzle/ -p3 < ../patches/guzzle-php85.patch"
        ]
    }
}
